# Production Environment Configuration Template
# Copy this to .env and fill in the values for production deployment

# Database (Update with production database credentials)
DATABASE_URL=mysql+aiomysql://username:password@host:port/database_name
DATABASE_URL_SYNC=mysql+pymysql://username:password@host:port/database_name

# Redis (Update with production Redis URL)
REDIS_URL=redis://redis-host:6379

# Telegram Bot (Use production bot token)
BOT_TOKEN=your-production-bot-token
ADMIN_ID=your-admin-telegram-id
WEBAPP_URL=https://yourdomain.com

# Environment Configuration
ENVIRONMENT=production
DEBUG=false

# API Settings (CRITICAL: Change secret key for production)
SECRET_KEY=generate-a-secure-random-secret-key-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Telegram Payments (Use production payment provider token)
PAYMENT_PROVIDER_TOKEN=your-production-payment-provider-token
PAYMENT_WEBHOOK_URL=https://yourdomain.com/api/payments/webhook

# CORS Settings (Specify exact production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Business Settings
MIN_ORDER_AMOUNT=1500
PAYMENT_CARD_INFO="Your production payment card information"